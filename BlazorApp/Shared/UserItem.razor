<NavLink href="@Href" class="list-group-item list-group-item-action">
    <div class="d-flex w-100 justify-content-between">
        <h5 class="mb-1">@Item.FirstName</h5>
        <h5 class="mb-1">@Item.LastName</h5>
    </div>
    <p class="mb-1">@Item.PhoneNumber</p>
    <p class="mb-1">@Item.Email</p>
    <small>@Item.Private</small>
    <small>@Item.Business</small>
    <small>@Item.Id</small>
</NavLink>

@code {
    [Parameter]
    public User Item { get; set; }
    public string Href { get; set; }

    protected override void OnInitialized()
    {
        Href = "user/" + Item.Id.ToString();
    }

}
