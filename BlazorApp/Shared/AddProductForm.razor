<EditForm Model="@product" OnValidSubmit="@HandleValidSubmit">
   

    <div class="mb-3">
        <label for="name" class="form-label">Product Name</label>
        <InputText id="name" class="form-control" @bind-Value="product.Name" />
    </div>
    <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <InputTextArea id="description" class="form-control" @bind-Value="product.Description" />
    </div>
    <div class="mb-3">
        <label for="size" class="form-label">Size</label>
        <InputTextArea id="size" class="form-control" @bind-Value="product.Size" />
    </div>

    <div class="mb-5">
        <button class="btn btn-secondary" type="submit">Lägg till ny Produkt</button>
    </div>
</EditForm>

@code {
    private Product product = new();

    private async Task HandleValidSubmit()
    {
        await Http.PostAsJsonAsync("https://localhost:44320/api/products", product);
        product = new();


        StateHasChanged();
      

    }
}
